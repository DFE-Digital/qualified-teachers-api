# https://editorconfig.org/
root = true

[*]
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{csproj,props}]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2

[*.tsv]
indent_style = tab

[*.cs]
dotnet_sort_system_directives_first = true
